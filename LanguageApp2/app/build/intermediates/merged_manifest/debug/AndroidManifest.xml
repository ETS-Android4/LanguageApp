<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.languageapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="31" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/letter_l_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.LanguageApp" >
        <activity
            android:name="com.example.languageapp.Phrases"
            android:exported="true"
            android:label="Phrases" />
        <activity
            android:name="com.example.languageapp.Colours"
            android:exported="true"
            android:label="Colours" />
        <activity
            android:name="com.example.languageapp.Family_member"
            android:exported="true"
            android:label="Family Members" />
        <activity
            android:name="com.example.languageapp.Numbers"
            android:exported="true"
            android:label="Numbers" />
        <activity
            android:name="com.example.languageapp.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>